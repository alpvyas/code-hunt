extends navbar.pug

block content
  h1 Hello from Profile!
  .profile-container
    .space1
    .user-logo-container
      .user-logo
        .logo= user.first_name[0]
    .user-info
      .space2
      .user-name
        strong= `${user.first_name} ${user.last_name}`
      .user-message= `I am ${user.first_name}`
      .user-id= `#${user.id }    @${user.first_name}_${user.last_name}`
      .edit-profile
        button.edit-profile-button(type="button") EDIT MY PROFILE
  .space3
    .display
      strong MY LINKS
  .links-container
    each userLink in userLinks
        div(class=".mylink-container" id=`mylinks${userLink.id}`)
          .link
            if userLink.languageId === 1
              img(src='/images/python.png' class='logo')
            if userLink.languageId === 9
              img(src='/images/c++.png' class='logo')
            if userLink.languageId === 3
              img(src='/images/javascript.png' class='logo')
            if userLink.languageId === 4
              img(src='/images/java.png' class='logo')
            if userLink.languageId === 5
              img(src='/images/fortran.png' class='logo')
            if userLink.languageId === 6
              img(src='/images/c#.png' class='logo')
            if userLink.languageId === 7
              img(src='/images/c.png' class='logo')
            if userLink.languageId === 8
              img(src='/images/swift.png' class='logo')
            if userLink.languageId === 11
              img(src='/images/html.png' class='logo')
            if userLink.languageId === 10
              img(src='/images/css.png' class='logo')
            .description-container  
              a(href=`/posts/${userLink.id}`)= userLink.link
            .button-container    
              button(class=`delete-logo` id=userLink.id) DELETE
